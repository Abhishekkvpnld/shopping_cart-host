<div style="background-color:#fff;">
  <div class="row">

    <h1 style="padding-left: 23%;">Add item</h1>

  </div>
  <div class="container ">
    <div style="background-color:#fff;width: 560px;" class="row">

      <form action="/admin/add-product" method="POST" enctype="multipart/form-data" style="padding: 30px;">
        <div class="form-group">
          <label>product no</label>
          <input style="width: 500px;" required name="productNo" type="text" class="form-control" id="formGroupExampleInput"
            placeholder="product no">
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput2">product name</label>
          <input style="width: 500px;" required name="productName" type="text" class="form-control" id="formGroupExampleInput2"
            placeholder="name">
        </div>
        <div class="form-group">
          <label>product details</label>
          <input style="width: 500px; " required name="productDetails" type="text" class="form-control" id="formGroupExampleInput2"
            placeholder="product details">
        </div>
        <div class="form-group">
          <label>product price</label>
          <input style="width: 500px;" required name="productPrice" type="text" class="form-control" id="formGroupExampleInput2"
            placeholder="product price">
        </div>
        <div class="form-group">
          <label>image</label>
          <input style="width: 500px;" required name="image" type="file" class="form-control" id="formGroupExampleInput2"
            placeholder="add image">
        </div>
        <div>
          <button class="btn btn-success mt-2" type="submit">submit</button>
        </div>
      </form>
    </div>
  </div>
</div> 