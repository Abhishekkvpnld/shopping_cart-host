<section style="padding-top: 60px;">

  <div class="container" >
    <div class="row">
      <div class="col-12" style="margin-left:15%; margin-top:5%;">

        <form action="/admin/signup" method="post" style="width:70%;">
          <div class="form-group">
            <label for="exampleInputEmail1" style="color: #fff;">Enter Admin Name</label>
            <input required type="text" class="form-control" name="name" id="exampleText" aria-describedby="nameHelp"
              placeholder="Enter Name" >
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1" style="color: #fff;">Email address</label>
            <input required type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp"
              placeholder="Enter email">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1" style="color: #fff;"> Password</label>
            <input required type="password" class="form-control" name="password" id="exampleInputPassword1"
              placeholder="Password">
          </div>
          <button type="submit" class="btn btn-secondary float-right">create account</button>
        </form>

      </div>
    </div>
  </div>

</section>