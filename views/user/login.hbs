<section style="padding-top: 50px;">

  <div class="container-fluid">
    <div class="row">
      <div class="col-12" style="margin-left:15%;margin-top:75px">
        <form action="/login" method="post" style="width:70%" id="user-login" >
          {{!-- {{#if loginErr}}
          <h6 style="color: red;">{{loginErr}}</h6>
          {{/if}} --}}
          <div class="form-group">
            <label for="exampleInputEmail1" style="color: #fff;">Email address</label>
            <input required type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp"
              placeholder="Enter email">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1" style="color: #fff;">Password</label>
            <input required type="password" class="form-control" name="password" id="exampleInputPassword1"
              placeholder="Password">
          </div>
          <a href="/signup">create a new account?</a>
          <button type="submit" class="btn btn-primary float-right">Submit</button>
        </form>
      </div>
    </div>
  </div>

</section>
